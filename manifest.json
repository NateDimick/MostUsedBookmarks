{
    "name": "Hot Bookmarks Bar", 
    "version": "0.0.8",
    "description": "Automatically sorts bookmarks bar by most used",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
        "bookmarks",
        "tabs",
        "storage"
  ],
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": {
      "16": "icons/hbv216.png",
      "32": "icons/hbv232.png",
      "48": "icons/hbv248.png",
      "128": "icons/hbv2128.png"
    },
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "icons/hbv216.png",
    "32": "icons/hbv232.png",
    "48": "icons/hbv248.png",
    "128": "icons/hbv2128.png"
  }
}